
@{
    ViewBag.Title = "Index";
}
@section scripts{
    <script type="text/javascript" src="~/Scripts/viewMap.js"></script>
}
<style type="text/css">
    div#mapDiv {
        min-width:300px;
        min-height:450px;
        width:100%;
        height:100%;
        background-color:gainsboro;
    }
    div#inputDiv{
        margin:5px;
        width:100%;
    }
    span#errorTxt{
        display:none;
        font-weight:bold;
    }
</style>
<div id="inputDiv">
    <label for="apiKey">Enter Google Map API Key</label>
    <input type="text" name="apiKey" id="apiKey" placeholder="Enter Google Map API Key"/>
    <button onclick="OnKeyEntered()">Load Map</button>
    <span id="errorTxt" class="text-danger"></span>
</div>

<div id="mapDiv">
    Google Map with current position
</div>
